                        <div id="tab2" class="tab-pane fade in active">
                            <div class="products-slick" data-nav="#slick-nav-2">
                                @foreach (var item in ListNewProduct)
                                {
                                    <div class="product">
                                        <div class="product-img">
                                            <img src="~/Content/@item.Photo" alt="">
                                            <div class="product-label">
                                                <span class="sale">@item.TinhTrang</span>
                                            </div>
                                        </div>
                                        <div class="product-body">
                                            <p class="product-Sản Phẩm">Sản Phẩm</p>
                                            <h3 class="product-name"><a href="#">@item.TenSP</a></h3>
                                            <h4 class="product-price">@(item.Gia.HasValue ? item.Gia.Value.ToString("N0") : "Liên hệ")</h4>
                                            <div class="product-rating">
                                            </div>

                                        </div>
                                        <div class="add-to-cart">
                                            <a class="add-to-cart-btn" href="/Cart/AddItem?productId=@item.MaSP&quantity=1"><i class="fa fa-shopping-cart"></i> thêm vào giỏ hàng</a>
                                        </div>
                                    </div>
                                }

                                <!-- /product -->

                            </div>
                            <!-- /product -->
                        </div>
                        <div id="slick-nav-2" class="products-slick-nav"></div>
                    </div>
                    <!-- /tab -->
                </div>
            </div>
        </div>
        <!-- /Products tab & slick -->
    </div>
    <!-- /row -->
</div>
<!-- /container -->
</div>
<!-- /SECTION -->
